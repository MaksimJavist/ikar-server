<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="06-02-2022-change-uuid-column-app-user" author="mkorotkiy">
        <modifyDataType tableName="app_user" columnName="uuid" newDataType="uuid"/>
    </changeSet>

    <changeSet id="06-02-2022-delete-app-user-primary-key-and-add-uuid-primary-key" author="mkorotkiy">
        <dropPrimaryKey tableName="app_user"/>
        <addPrimaryKey tableName="app_user" columnNames="uuid"/>
    </changeSet>

    <changeSet id="06-02-2022-delete-id-column-from-app-user" author="mkorotkiy">
        <dropColumn tableName="app_user" columnName="id"/>
    </changeSet>

</databaseChangeLog>